<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 背景透明 -->
            <stroke android:width="1dp" android:color="#FF0000"/> <!-- 焦點時紅色底線 -->
            <padding android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 背景透明 -->
            <stroke android:width="1dp" android:color="#000000"/> <!-- 未焦點時黑色底線 -->
            <padding android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>
