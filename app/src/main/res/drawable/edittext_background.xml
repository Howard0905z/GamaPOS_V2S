<!-- res/drawable/edittext_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- 透明背景 -->
            <stroke android:width="1dp" android:color="#FF9800"/> <!-- 焦點時的底線顏色 -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- 透明背景 -->
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- 預設底線顏色 -->
        </shape>
    </item>
</selector>
