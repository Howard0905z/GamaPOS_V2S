<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 總額 和 输入框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="總額"
                android:textSize="40px" />

            <EditText
                android:id="@+id/editTextTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:textSize="40sp"
                android:cursorVisible="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="#FFFFFF" />
        </LinearLayout>

        <!-- 收款 和 输入框 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textViewCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="收款"
                android:textSize="32px" />

            <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:textSize="48px"
                android:cursorVisible="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="#FFFFFF" />
        </LinearLayout>

        <!-- 找零 -->
        <TextView
            android:id="@+id/textViewChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="找零"
            android:textSize="32px" />

        <!-- 数字和功能按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- 第一行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16px">

                <Button
                    android:id="@+id/buttonCE"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="CE"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="刪除"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/buttonOtherService"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_otherservice"
                    android:text="其他服務"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />
            </LinearLayout>

            <!-- 第二行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16px">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />
            </LinearLayout>

            <!-- 第三行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16px">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />
            </LinearLayout>

            <!-- 第四行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16px">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />
            </LinearLayout>

            <!-- 第五行按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16px">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_checkout"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="48px" />

                <Button
                    android:id="@+id/buttonLinePayReceived"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_linepay"
                    android:text="Line Pay收)"
                    android:textColor="#FFFFFF"
                    android:textSize="32px"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonCreditCardReceived"
                    android:layout_width="0dp"
                    android:layout_height="154px"
                    android:layout_weight="1"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:background="@drawable/rounded_button_creditcard"
                    android:text="信用卡(收)"
                    android:textColor="#FFFFFF"
                    android:textSize="32px"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- 第六行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16px">

            <Button
                android:id="@+id/buttonCashReceived"
                android:layout_width="0dp"
                android:layout_height="154px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/rounded_button_cash"
                android:text="現金(收)"
                android:textColor="#FFFFFF"
                android:textSize="32px"
                android:visibility="gone" />
            <Button
                android:id="@+id/buttonShoppingMallGiftCardReceived"
                android:layout_width="0dp"
                android:layout_height="154px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/rounded_button_creditcard"
                android:text="百貨禮卷(收)"
                android:textColor="#FFFFFF"
                android:textSize="32px"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonLinePay"
                android:layout_width="0dp"
                android:layout_height="154px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/rounded_button_linepay"
                android:text="Line Pay"
                android:textColor="#FFFFFF"
                android:textSize="32px"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 第七行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16px">

            <Button
                android:id="@+id/buttonCreditCard"
                android:layout_width="0dp"
                android:layout_height="154px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/rounded_button_creditcard"
                android:text="信用卡"
                android:textColor="#FFFFFF"
                android:textSize="32px"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonCash"
                android:layout_width="0dp"
                android:layout_height="154px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/rounded_button_cash"
                android:text="現金"
                android:textColor="#FFFFFF"
                android:textSize="32px"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonStoreCreditCard"
                android:layout_width="0dp"
                android:layout_height="154px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/rounded_button_creditcard"
                android:text="百貨信用卡"
                android:textColor="#FFFFFF"
                android:textSize="32px"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 第八行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16px">

            <Button
                android:id="@+id/buttonGamaPay"
                android:layout_width="0dp"
                android:layout_height="154px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/rounded_button_cash"
                android:text="橘子支付"
                android:textColor="#FFFFFF"
                android:textSize="32px"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonCultureCoin"
                android:layout_width="0dp"
                android:layout_height="154px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/rounded_button_cash"
                android:text="文化幣"
                android:textColor="#FFFFFF"
                android:textSize="32px"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonCultureCoinReceived"
                android:layout_width="0dp"
                android:layout_height="154px"
                android:layout_weight="1"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:background="@drawable/rounded_button_cash"
                android:text="文化幣(收)"
                android:textColor="#FFFFFF"
                android:textSize="32px"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
